    <h3>Get Started</h3>
    <a href="/auth/login" class="btn btn-primary">Login</a>
    <a href="/auth/register" class="btn btn-secondary">Register</a>
</div>

<!-- Play Anonymously -->
<div style="margin-top: 20px;">
    <h4>Or, play anonymously</h4>
    <input type="text" id="anonymousName" placeholder="Enter your name" />
    <button id="playAnonymouslyBtn" class="btn btn-info">Play Anonymously</button>
</div> *@

<!-- Link to Room List -->
<div style="margin-top: 30px;">
    <h3>Join an existing game room:</h3>
    <a href="@Url.Action("RoomList", "Home")" class="btn btn-link">View Available Rooms</a>
</div>

<script>
    document.getElementById("playAnonymouslyBtn").onclick = function () {
        const name = document.getElementById("anonymousName").value;
        if (!name) {
            alert("Please enter a name to play anonymously.");
            return;
        }
        // Redirect to PlayAnonymously action with the name as a query parameter
        window.location.href = `/Home/RoomList?name=${encodeURIComponent(name)}`;
    };
</script>
